# Database
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-use-long-random-string

# Google Cloud Vision API
# Option 1: Path to JSON file (local development)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json

# Option 2: Base64 encoded JSON (production/Railway)
# Encode your JSON file: base64 -i google-credentials.json | tr -d '\n'
GOOGLE_CREDENTIALS_JSON=base64_encoded_json_here

# Gemini AI API Key
GEMINI_API_KEY=your-gemini-api-key-here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# Server
PORT=8000
